.chat-side
  .side-header
    .side-header__box
      .side-header__box__name
        = current_user.name
      .side-header__box__icon
        = link_to new_group_path  do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')    

  .groups
    - current_user.groups.each do |group|
      .groups__box
        = link_to group_messages_path(group) do
          .groups__box__name
            = group.name
          .groups__box__message
            = group.show_last_message